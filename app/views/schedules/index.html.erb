<h1>スケジュール</h1>
<%= search_form_for @q, url: search_schedules_path do |f| %>
  <div class="d-flex flex-wrap">
  <div class="col-sm-12 col-lg-1">
   <%= f.label :schedule_date, '　　期間' %>
    </div>
    <div class="col-sm-12 col-lg-4">
    <%= f.date_field :schedule_date_gteq,
                  include_blank: true,
                  class: 'form-control'%>
                    </div>
                    <div class="col-sm-12 col-lg-1">　　～
                    </div>
                    <div class="col-sm-12 col-lg-4">
                    <%= f.date_field :schedule_date_lteq, 
    include_blank: true,
    class: 'form-control'%>
      </div>
      <div class="col-sm-12 col-lg-2">
      <%= f.submit '検索', class: "btn btn-primary"  %>
      </div>
      </div>
      </div>
  <% end %>
<br>
<div class="example">
 <table>
    <tr>
      <th>名前</th>
      <% (Date.today.beginning_of_month..Date.today.end_of_month).each do |date| %>
        <th><%= date.strftime("%Y年%m月%d日") %></th>
      <% end %>
    </tr>
  <% @users.each do |user| %>
      <tr>
        <th>
         <%= user.name %>
        </th>
        <% schecount = @schedules[user.id].length %>
            <% schecount.times do |s| %>
         <td>
         <div class="DivLink">
             <div class="d-flex flex-wrap">
               <div class="col-sm-12 col-lg-12">
                 予定：<%= @schedules[user.id]["#{s}".to_i].status %>
               </div>
               <div class="col-sm-12 col-lg-4">
                 <%= @schedules[user.id]["#{s}".to_i].start_time %>
               </div>
               <div class="col-sm-12 col-lg-2">
               ～ 
               </div>
               <div class="col-sm-12 col-lg-4">
                 <%= @schedules[user.id]["#{s}".to_i].end_time %>
               </div>
            </div>           
            <%= link_to "確認", schedule_path(@schedules[user.id]["#{s}".to_i].id), {class: "Link"} %>
          </div>           
           </td>
        <% end %>
      </tr>
    <% end %>
</table>
</div>

