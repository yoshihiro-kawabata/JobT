<h2 style="margin: 20px;">メッセージ作成</h2>
<div class="new_box">
<% if @message.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @message.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% userA = []  %>

<% @users.each do |user| %>
  <% userA << [user.name, user.id]  %>
<% end %>

<%= form_with(model: @message, local: true) do |f| %>

<p><%= f.label :送信先 %>：
<%= f.select :user_id, userA %></p>

<p>  <%= f.label :内容 %>：</p>

<div class="form-group">
<%= f.text_area :content,class: "form-control",id: "exampleFormControlTextarea1", style: "height:200px; wrap:hard;" %>
</div>



<p>  <%= f.submit "送信",class: "btn btn-primary btn-lg", data: { confirm: '送信してもよろしいですか？' } %> </p>
<% end %>
</div>