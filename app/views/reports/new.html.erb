<h1>日報作成</h1>

<% if @report.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @report.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="report_box">
<%= form_with(model: @report, local: true) do |f| %>
  <table style="border:2px solid; width: 1100px">
    <thead>
      <tr>
      <th colspan="3" style="height: 50px; padding: 2px;margin: 20px; background-color:#ee827c; text-align:center;">日報</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td style="width: 100px; border:2px solid">部署</td>
          <td style="width: 700px; border:2px solid"><%= @group.name %></td>
          <td style="width: 300px; border:2px solid">日付</td>
        </tr>
        <tr>
          <td style="border:2px solid">氏名</td>
          <td style="border:2px solid"><%= current_user.name %></td>
          <td style="border:2px solid"><%= f.hidden_field :createdate, :value => DateTime.now.strftime("%m月%d日") %><%= DateTime.now.strftime("%m月%d日") %></td>
        </tr>
        <tr>
        <td colspan="3" style="height: 50px; padding: 2px;margin: 20px; background-color:#e8d3c7; text-align:center;">「事実」何があったか</th>
        </tr>
        <tr>
          <td colspan="3" style="border:2px solid"><%= f.text_area :daytask, style: "width: 100%; height:100px; wrap:hard;" %></td>
        </tr>
        <tr>
        <td colspan="3" style="height: 50px; padding: 2px;margin: 20px; background-color:#84b9cb; text-align:center;">「感情」何があったか</th>
        </tr>
        <tr>
          <td colspan="3" style="border:2px solid"><%= f.text_area :emotion, style: "width: 100%; height:100px; wrap:hard;" %></td>
        </tr>
        <tr>
        <td colspan="3" style="height: 50px; padding: 2px;margin: 20px; background-color:#ada250; text-align:center;">「学習」何を学んだか</th>
        </tr>
        <tr>
          <td colspan="3" style="border:2px solid"><%= f.text_area :learn, style: "width: 100%; height:100px; wrap:hard;" %></td>
        </tr>
        <tr>
        <td colspan="3" style="height: 50px; padding: 2px;margin: 20px; background-color:#c7dc68; text-align:center;">「変化」何を変えるか</th>
        </tr>
        <tr>
          <td colspan="3" style="border:2px solid"><%= f.text_area :transition, style: "width: 100%; height:100px; wrap:hard;" %></td>
        </tr>
        <tr>
        <td colspan="3" style="height: 50px; padding: 2px;margin: 20px; background-color:#c8c2be; text-align:center;">管理者コメント</th>
        </tr>
        <tr>
          <td colspan="3" style="border:2px solid;">なし</td>
        </tr>
    </tbody>
  </table>
<br>
  <p>  <%= f.submit "作成",class: "btn btn-primary btn-lg" %> </p>
  <% end %>
  </div>

