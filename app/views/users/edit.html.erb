<h2 style="margin: 20px;"><%= t('.title') %></h2>
<div class="user_box">

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <p>  <%= f.label :社員番号 %> : <%= @user.number %> </p>
  <p>  <%= f.label :名前 %> : 
       <%= f.text_field :name, :size => 32, :placeholder => "30文字以内" %></p>
  <p>  <%= f.label :メールアドレス %>  : 
       <%= f.email_field :email, :size => 32 %></p>
       <p><%= f.label :パスワード %>：
       <%= f.password_field :password, :placeholder => "半角英数字6文字以上" %>
       <%= f.password_field :password_confirmation, :placeholder => "確認のため再入力" %>
       </p>
         <p>  <%= f.submit "更新する", class: "btn btn-primary"  %>　<%= link_to t('common.back'), user_path(@user.id) %>  </p>
<% end %>

</div>
