<h2 style="margin: 20px;"><%= t('.title') %></h2>
<div class="user_box">

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>

  <div class="d-flex flex-wrap">
    <div class="col-sm-12 col-lg-4">
        <%= f.label :社員番号： %> 
    </div>
    <div class="col-sm-12 col-lg-8">
        <%= @user.number %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :名前： %>
    </div>
    <div class="col-sm-12 col-lg-8">
      <%= f.text_field :name, :size => 32, :placeholder => "30文字以内" %>
    </div>
    <div class="col-sm-12 col-lg-4">
        <%= f.label :メールアドレス： %>
    </div>
    <div class="col-sm-12 col-lg-8">
      <%= f.email_field :email, :size => 32 %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :パスワード： %>
    </div>
    <div class="col-sm-12 col-lg-8">
       <%= f.password_field :password, :placeholder => "半角英数字6文字以上" %>
    </div>
    <div class="col-sm-12 col-lg-4">
    </div>
    <div class="col-sm-12 col-lg-8">
       <%= f.password_field :password_confirmation, :placeholder => "確認のため再入力" %>
    </div>

    <div class="col-sm-12 col-lg-4">
      <h4 style="margin-top: 30px;"><%= f.submit "更新", class: "btn btn-primary"  %></h4>
    </div>
    <div class="col-sm-12 col-lg-8">
      <h4 style="margin-top: 30px;"><%= link_to t('common.back'), jobs_manage_path %></h4>
    </div>
  </div>
<% end %>
</div>


